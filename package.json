{
  "name": "tmi.js",
  "version": "1.0.0-rc1",
  "description": "Javascript library for the Twitch Messaging Interface.",
  "keywords": [
    "tmi",
    "twitch",
    "twitch.tv",
    "stream",
    "broadcast",
    "message",
    "messaging",
    "interface",
    "subscriber",
    "websocket",
    "ws",
    "bot",
    "robot"
  ],
  "main": "index.js",
  "files": [
    "lib",
    "index.js",
    "LICENSE"
  ],
  "engines": {
    "node": ">=4.4.0"
  },
  "author": "Schmoopiie",
  "contributors": [
    {
      "name": "celluj34",
      "email": "celluj34@gmail.com"
    }
  ],
  "scripts": {
    "test": "istanbul cover _mocha -- -R spec --require should",
    "test-win": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec --require should",
    "build": "npm-run-all --sequential build:*",
    "build:rimraf": "rimraf ./build",
    "build:mkdirp": "mkdirp ./build",
    "build:dedupe": "npm dedupe",
    "build:browserify": "browserify index.js -o ./build/tmi.js",
    "build:uglify": "uglifyjs --compress --mangle --output ./build/tmi.min.js --source-map ./build/tmi.js.map ./build/tmi.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/Schmoopiie/tmi.js.git"
  },
  "bugs": {
    "url": "https://github.com/Schmoopiie/tmi.js/issues"
  },
  "dependencies": {
    "irc-message": "3.0.1",
    "request": "2.60.0",
    "ws": "1.0.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "6.6.0",
    "babelify": "7.2.0",
    "browserify": "13.0.0",
    "hook-std": "0.2.0",
    "istanbul": "0.4.2",
    "mkdirp": "0.5.1",
    "mocha": "2.2.5",
    "npm-run-all": "1.7.0",
    "rimraf": "2.5.2",
    "should": "7.0.4",
    "sinon": "^1.17.4",
    "uglify-js": "2.6.2"
  },
  "browser": {
    "ws": false,
    "request": false
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
